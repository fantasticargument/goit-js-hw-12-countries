<div class="card">
    <div class="flag-img">
        <img src="{{flag}}" alt="flag {{name}}" height="200px">
    </div>
    <h2 class="name-coantry">{{name}}</h2>
    <ul>
        <li class="item-card">capital: {{capital}}</li>
        <li class="item-card">population: {{population}}</li>
        <li class="item-card">language:
            <ul class="language-list">{{#each languages}}
                <li>{{name}}</li>
                {{/each}}
            </ul>
        </li>
    </ul>
</div>